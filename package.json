{
  "name": "sastre",
  "version": "0.0.12",
  "description": "Module confection at its finest.",
  "main": "lib/index.js",
  "files": [
    "lib/*.js"
  ],
  "scripts": {
    "dev": "npm run test -- -w",
    "mocha": "_mocha -r module-alias/register --exit --recursive -bR spec",
    "node": "node -r module-alias/register --",
    "start": "npm run node -- example.js",
    "test": "npm run test:unit --",
    "test:ci": "npm run coverage && npm run report --",
    "test:unit": "npm run mocha -- 'test/*.test.js'",
    "test:example": "npm run mocha -- 'example/**/*.test.js'",
    "test:coverage": "npm run coverage && npm run report",
    "coverage": "NODE_ENV=test istanbul cover --root lib -- _mocha -r module-alias/register --exit --recursive -bR spec 'test/**/*.test.js'",
    "report": "codecov --file=coverage/lcov.info -e TRAVIS_NODE_VERSION"
  },
  "repository": "https://github.com/pateketrueke/sastre",
  "author": "Alvaro Cabrera <pateketrueke@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "glob": "^7.1.2"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "codecov": "^3.0.2",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "module-alias": "^2.1.0",
    "sequelize": "^4.38.0",
    "sqlite3": "^4.0.1",
    "testdouble": "^2.1.2"
  },
  "_moduleAliases": {
    "@src": "example/src",
    "@lib": "lib"
  }
}
